{# templates/tour/delete.html.twig #}
{# Expects `tour` in context. Renders a POST form that hits the delete route. #}

<form method="post" action="{{ path('app_tour_delete', {'id': tour.id}) }}" onsubmit="return confirm('Are you sure you want to delete this tour?');" style="display:inline;">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tour.id) }}">
  <button type="submit" class="px-3 py-2 rounded-lg bg-red-600 hover:bg-red-500 text-white font-semibold">
    Delete
  </button>
</form>
