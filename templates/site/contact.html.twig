{% extends 'base.html.twig' %}
{% block title %}Contact — ARTEUM{% endblock %}

{% block body %}
<section id="contact" class="min-h-screen py-24" style="background: linear-gradient(180deg,#2b2b2b 0%, #1f1f1f 100%);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-white">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-start">
      <!-- LEFT: Form -->
      <div class="w-full">
        <div class="mb-8">
          <h1 class="text-4xl font-extrabold">Contact</h1>
          <p class="mt-2 text-neutral-400 max-w-lg">
            Have a question about tours, exhibitions, education programs, or partnerships? Send us a message and we'll get back to you.
          </p>
        </div>

        {# flash messages (success / error) #}
        {% for label, messages in app.flashes %}
          {% for message in messages %}
            <div class="mb-6 rounded-lg px-4 py-3 {{ label == 'success' ? 'bg-green-600 text-white' : 'bg-red-600 text-white' }}">
              {{ message }}
            </div>
          {% endfor %}
        {% endfor %}

        <div class="bg-[#232323] border border-neutral-800 rounded-2xl p-6 shadow-lg">
          <form method="post" action="{{ path('app_contact') }}" class="space-y-6" novalidate>
            <div>
              <label for="name" class="block text-sm font-medium text-white">Name</label>
              <div class="mt-2">
                <input
                  id="name"
                  name="name"
                  type="text"
                  required
                  value="{{ app.request.get('name')|e }}"
                  class="block w-full rounded-md bg-neutral-800 text-neutral-100 px-3 py-2 placeholder:text-neutral-400 border border-neutral-700 focus:ring-2 focus:ring-indigo-500 outline-none"
                  aria-required="true"
                >
              </div>
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-white">Email</label>
              <div class="mt-2">
                <input
                  id="email"
                  name="email"
                  type="email"
                  required
                  value="{{ app.request.get('email')|e }}"
                  class="block w-full rounded-md bg-neutral-800 text-neutral-100 px-3 py-2 placeholder:text-neutral-400 border border-neutral-700 focus:ring-2 focus:ring-indigo-500 outline-none"
                  aria-required="true"
                >
              </div>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-white">Message</label>
              <div class="mt-2">
                <textarea
                  id="message"
                  name="message"
                  rows="6"
                  required
                  class="block w-full rounded-md bg-neutral-800 text-neutral-100 px-3 py-2 placeholder:text-neutral-400 border border-neutral-700 focus:ring-2 focus:ring-indigo-500 outline-none"
                  aria-required="true"
                >{{ app.request.get('message')|e }}</textarea>
              </div>
            </div>

            <div>
              <button
                type="submit"
                class="w-full inline-flex items-center justify-center gap-2 bg-gradient-to-r from-indigo-600 to-violet-600 hover:from-indigo-500 hover:to-violet-500 text-white font-semibold py-3 px-4 rounded-lg shadow-lg"
              >
                Send Message
              </button>
            </div>

            <p class="text-xs text-neutral-400">We respect your privacy — your details are used only to reply to this message.</p>
          </form>
        </div>
      </div>

      <!-- RIGHT: Contact info & quick links -->
      <aside class="w-full">
        <div class="rounded-2xl overflow-hidden border border-neutral-800 bg-[#1f1f1f] p-6 shadow-lg">
          <h2 class="text-xl font-semibold text-white">Get in touch</h2>
          <p class="mt-3 text-neutral-300">
            Prefer to call or visit? We're happy to help during opening hours.
          </p>

          <dl class="mt-6 space-y-4 text-sm text-neutral-300">
            <div>
              <dt class="font-medium text-neutral-400">Email</dt>
              <dd class="mt-1"><a href="mailto:info@arteum.com" class="text-indigo-400 hover:text-indigo-300">info@arteum.com</a></dd>
            </div>

            <div>
              <dt class="font-medium text-neutral-400">Phone</dt>
              <dd class="mt-1">+1 (555) 123-4567</dd>
            </div>

            <div>
              <dt class="font-medium text-neutral-400">Address</dt>
              <dd class="mt-1">123 Gallery Lane, Arts District, Your City</dd>
            </div>

            <div>
              <dt class="font-medium text-neutral-400">Hours</dt>
              <dd class="mt-1">Tue–Sun: 10:00 — 18:00</dd>
            </div>
          </dl>

          <div class="mt-6 border-t border-neutral-800 pt-4">
            <h3 class="text-sm font-semibold text-white">Quick links</h3>
            <ul class="mt-3 space-y-2 text-sm">
              <li><a href="{{ path('app_book_a_tour') }}" class="text-indigo-400 hover:text-indigo-300">Book a tour</a></li>
              <li><a href="{{ path('app_tour_index') }}" class="text-indigo-400 hover:text-indigo-300">View tours (admin)</a></li>
              <li><a href="{{ path('app_about') }}" class="text-indigo-400 hover:text-indigo-300">About ARTEUM</a></li>
            </ul>
          </div>

          <div class="mt-6">
            <div class="text-sm text-neutral-400">Follow us</div>
            <div class="mt-3 flex items-center gap-3">
              {# simple icon placeholders - replace with real links if available #}
              <a href="#" class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-neutral-800 border border-neutral-700 hover:bg-neutral-700">
                <svg class="w-4 h-4 text-neutral-200" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.99H7.898v-2.888h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.462h-1.26c-1.242 0-1.63.771-1.63 1.562v1.875h2.773l-.443 2.888h-2.33v6.99C18.343 21.128 22 16.991 22 12z"/></svg>
              </a>
              <a href="#" class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-neutral-800 border border-neutral-700 hover:bg-neutral-700">
                <svg class="w-4 h-4 text-neutral-200" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2.04c-5.5 0-9.96 4.46-9.96 9.96 0 4.41 2.87 8.14 6.84 9.45.5.09.68-.22.68-.48 0-.24-.01-.87-.01-1.7-2.78.6-3.37-1.34-3.37-1.34-.45-1.15-1.1-1.46-1.1-1.46-.9-.62.07-.6.07-.6 1 .07 1.53 1.03 1.53 1.03.89 1.52 2.34 1.08 2.9.83.09-.65.35-1.08.64-1.33-2.22-.25-4.56-1.11-4.56-4.95 0-1.09.39-1.98 1.03-2.68-.1-.25-.45-1.27.1-2.65 0 0 .84-.27 2.75 1.02A9.56 9.56 0 0112 6.8c.85.004 1.71.115 2.51.337 1.9-1.29 2.74-1.02 2.74-1.02.55 1.38.2 2.4.1 2.65.64.7 1.03 1.59 1.03 2.68 0 3.85-2.34 4.7-4.57 4.95.36.31.68.92.68 1.85 0 1.33-.01 2.4-.01 2.73 0 .27.18.58.69.48A9.966 9.966 0 0022 12c0-5.5-4.46-9.96-10-9.96z"/></svg>
              </a>
              <a href="#" class="inline-flex items-center justify-center w-9 h-9 rounded-md bg-neutral-800 border border-neutral-700 hover:bg-neutral-700">
                <svg class="w-4 h-4 text-neutral-200" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true"><path d="M12 2a10 10 0 100 20 10 10 0 000-20zm1.5 14.5v-2.25h1.5l.25-1.75H13.5V10.5c0-.5.14-.84.86-.84h.94V8.02A12.9 12.9 0 0013.5 8c-1.92 0-3.23 1.17-3.23 3.32v1.85H8.5v1.75h1.76V17.5H13.5z"/></svg>
              </a>
            </div>
          </div>
        </div>

        {# small map placeholder for layout (replace with iframe or image if desired) #}
        <div class="mt-6 rounded-lg overflow-hidden border border-neutral-800">
          <div class="bg-neutral-900 p-8 text-center text-neutral-400">
            <div class="text-sm">Map placeholder</div>
            <div class="mt-4 text-xs">Replace this with an embedded map or an image of your location.</div>
          </div>
        </div>
      </aside>
    </div>
  </div>
</section>
{% endblock %}
